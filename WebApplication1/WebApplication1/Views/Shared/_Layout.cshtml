<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/bootstrap.css" rel="stylesheet"/>
    <link href="~/Content/Site.css" rel="stylesheet"/>
    @Scripts.Render("~/bundles/modernizr")
    <style>
        html, body {
            font-size: 17px !important;
        }
        .container ul li a {
            color: white;
            transition: 0.5s;
            font-weight: 500;
        }
        .container ul li a:hover {
            color: #f4cccc;
        }
        #dvLeftBar ul {
            margin-top: 0px;
            list-style: none;
            padding: 0px;
        }
        #dvLeftBar ul li {
            padding: 15px 20px;
            transition: 0.5s;
            display: block;
        }
        #dvLeftBar ul li a {
            margin-left: 30px;
            font-weight: 500;
        }
        #dvLeftBar ul li:hover {
            background: #1c5d8e;
        }

        #logout {
            background: none;
            border: none;
            font-family: verdana, arial, sans-serif;
            transition: .2s;
            color: #fcead7;
            font-weight: 550;
            border-radius: 20px;
            text-decoration: underline;
        }
        #logout:hover {
            color: #f4cccc;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark" style="background-color: #45818e !important;  ">
        <div class="container">
            @Html.ActionLink("Inventory", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="topbar" class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1" >
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>

        <div style="display: flex;  text-decoration: underline; right: 5px; height: 100%; width: 150px; color: white; margin-right: 50px;">
            @{ 
                if (Session["User"] != null)
                {
                    <span>@Session["User"]</span>
                }
            }
            <b style="padding-left: 5px;"> | </b>
            @using (Html.BeginForm("Logout", "Account", FormMethod.Post))
            {
                <input id="logout" type="submit" name="btnLogout" value="Logout"/>
            }
        </div>
    </nav>
    <div id="dvLeftBar" style="width: 200px; position: fixed; background: #153d60; left: 0px; top: 60px; bottom: 0px ">
        <div style=" color: white; ">
            <ul>
                <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Dashboard", "Dashboard", "Home", new { area = "" }, new { @class = "nav-link" })</li>
            </ul>
        </div>
    </div>
    <div id="dvContentWrapper" style=" position: fixed; background: #e6e9ee; left: 200px; top: 60px; bottom: 0px; right: 0px; overflow: auto;">
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
